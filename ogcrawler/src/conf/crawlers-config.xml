<?xml version="1.0" encoding="UTF-8"?>
<webCrawlers xmlns="http://www.squilla.co.in/WebCrawlers" >

    <Properties>
        <Property key="base.url" value="${ML_API_BASE_URL}"/>
        <Property key="url.part" value="/feeds/train"/>
        <Property key="API_KEY" value="11a1bc16d14d-1521ee187121-1161ed1dd1c6-1861fc1b718c"/>
        <Property key="enable.upload" value="false"/>
        <Property key="newsapi.org_sources.file" value="conf/news-sources.cfg"/>
    </Properties>
    
    <!-- Articles -->
    <WebCrawler id="qz.com" domainUrl="https://qz.com/" flushFrequency="50" thresholdFrequency="10" robotRulesExists="false" uploadIndependently="true">
        <name>Quartz</name>
        <description>Quartz India</description>
        <contentHandler preClassifiedType="ARTICLE">
            <handler>defaultOgHtmlContentHandler</handler>
        </contentHandler>
        <linkFilter>
            <!--condition>$_link.contains("collections/")</condition-->
        </linkFilter>
        <webLinkTracker>
	        <!--serviceId>redisWebLinkTrackerService</serviceId-->
	        <serviceId>defaultWebLinkTrackerService</serviceId>
	    </webLinkTracker>
	    <geoTagResolver>
	        <resolver>defaultGeoLocationResolver</resolver>
	    </geoTagResolver>
	    <taxonomyClassifier>
	        <resolver>defaultTaxonomyResolver</resolver>
	    </taxonomyClassifier>
	    <articleSummarizer>
	        <resolver>defaultArticleTextSummarizer</resolver>
	    </articleSummarizer>
        <scheduler initialDelay="0" periodicDelay="1" timeUnit="DAYS"/>
    </WebCrawler>
    <ApiReader id="newsapi.org" uploadIndependently="true">
        
    </ApiReader>
    
    <feedUploader>
        <uploader>defaultOgFeedUploader</uploader>
    </feedUploader>
</webCrawlers>
