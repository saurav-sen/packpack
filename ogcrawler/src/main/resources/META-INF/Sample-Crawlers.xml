<?xml version="1.0" encoding="UTF-8"?>
<webCrawlers xmlns="http://www.squilla.co.in/WebCrawlers">
    <WebCrawler id="" domainUrl="http://www.burrard-lucas.com" historyTracking="false" flushFrequency="50" thresholdFrequency="10" robotRulesExists="false">
        <name>burrard-lucas</name>
        <description>burrard-lucas Site</description>
        <contentHandler classifyFeeds="true">
            <handler>defaultOgHtmlContentHandler</handler>
            <feedUploader>
                <uploader>defaultOgFeedUploader</uploader>
                <config key="BASE_URL" value="${base.url}"/> <!-- http://192.168.35.12:8080/RSS -->
                <config key="URL_PART" value="/feeds/classify"/> <!-- /feeds/classify -->
                <config key="API_KEY" value="${API_KEY}"/> <!-- 11a1bc16d14d-1521ee187121-1161ed1dd1c6-1861fc1b718c -->
            </feedUploader>
        </contentHandler>
        <linkFilter>
            <condition>$_link.contains("collections/")</condition>
        </linkFilter>
        <scheduler initialDelay="0" periodicDelay="1" timeUnit="DAYS"/>
    </WebCrawler>
</webCrawlers>
