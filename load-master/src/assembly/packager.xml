<assembly>
	<id>packager</id>
	<formats>
		<format>tar.gz</format>
		<format>zip</format>
	</formats>
	<fileSets>
		<fileSet>
			<includes>
				<include>README</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>src/bin</directory>
			<outputDirectory>bin</outputDirectory>
			<includes>
				<include>*.txt</include>
				<include>*.xml</include>
				<include>*.docx</include>
				<include>*.json</include>
			</includes>
			<lineEnding>unix</lineEnding>
			<fileMode>0755</fileMode>
		</fileSet>
		<fileSet>
			<directory>src/logs</directory>
			<outputDirectory>logs</outputDirectory>
			<includes>
				<include>*.log</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>src/conf</directory>
			<outputDirectory>conf</outputDirectory>
			<includes>
				<include>*.properties</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>src/stagging</directory>
			<outputDirectory>stagging</outputDirectory>
			<includes>
				<include>*</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>target</directory>
			<outputDirectory>bin</outputDirectory>
			<includes>
				<include>setup*.jar</include>				
			</includes>
		</fileSet>
	</fileSets>
</assembly>